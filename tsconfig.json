{
  "compilerOptions": {
    "target": "es2018",                                  
    "lib": ["ES5", "ES6", "ES2018"],                                        
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "typeRoots": ["./src/@types"],                                  
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}